<% layout('layouts/main') %>

<main>
  <div class="wrapper">
    <div class="main">
      <h1 class="main__title"><%= main[0].title %></h1>
      <p class="main__text">
        <%= main[0].undertitle %>
      </p>
      <p class="main__description">
        <%- main[0].description %>
      </p>
    </div>
  </div>
</main>

<section>
  <div class="wrapper">
    <div class="welcome-bg">
      <a href="#questions__form" class="welcome__phone">Обратный звонок</a>
      <div class="welcome">
        <h2 class="welcome__title"><%= welcome[0].title %></h2>
        <p class="welcome__description"><%= welcome[0].undertitle %></p>
        <p class="welcome__description">
          <%= welcome[0].description %>
        </p>
        <p class="welcome__call-to-action">
          <%= welcome[0].callToAction %>
        </p>
        <div class="welcome__author">
          <div class="welcome__author-text">
            <p class="welcome__author-title"><%= welcome[0].nameOfCEO %></p>
            <p class="welcome__author-description">
              <%= welcome[0].CEO %>
            </p>
          </div>
          <div class="welcome__author-sign">
            <img src="./img/sign.png" alt="sign" />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="wrapper">
    <div class="filials" id="filials">
      <div class="filials__description">
        <h2 class="filials__title">Наши филиалы</h2>
        <p class="filials__text">Выберите любой удобный центр для посещения!</p>
        <p class="filials__text">
          Наши преподаватели - опытные профессионалы, которые помогут вашему
          ребенку раскрыть свой потенциал и достичь новых высот. Приглашаем вас
          присоединиться к нам и открыть для вашего ребенка новые возможности!
        </p>
      </div>
      <img class="filials__icon" src="./img/test.png" alt="test" />
    </div>
  </div>
</section>

<div>
  <div class="wrapper">
    <div class="advantages">
      <% advantages.forEach(function(item){ %>
      <div class="advantages__item">
        <img src="/uploads/advantages/<%= item.advantagesImageUrl %>" alt="<%= item.advantagesImageUrl %>" />
        <div class="advantages__description">
          <h3 class="advantages__title"><%= item.title %></h3>
          <p class="advantages__text">
            <%= item.description %>
          </p>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>

<section>
  <div class="wrapper">
    <div class="performance">
      <h2 class="performance__title">
        <%= performance.title %>
      </h2>
      <div class="performance__description">
        <a data-fslightbox="gallery2" href="./uploads/mainVideo/<%= performance.mainVideoUrl %>">
          <div class="performance__video">
            <video
              id="performance__videoplayer"
              width="100%"
              height="100%"
              class="videoplayer"
              poster="./uploads/mainVideo/<%= performance.poster %>"
              preload="none"
            >
              <source src="./video/" type="video/mp4" />
              <p>К сожалению, ваш браузер не поддерживает видео</p>
            </video>
          </div>
        </a>
      </div>
      <div class="performance__list">
        <ul class="performance__items">
          <% performanceItems.forEach(function(item){ %>
          <li class="performance__item">
            <img
              class="performance__list-type"
              src="./img/star-point<%= item.id %>.svg"
              alt="star-point<%= item.id %>"
            /><%= item.description %>
          </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </div>
</section>
<!-- <form action="/questions" method="POST"> -->
<section>
  <div class="wrapper">
    <div class="questions">
      <h2 class="questions__title">Часто задаваемые<br />вопросы</h2>
      <p class="questions__undertitle">
        Мы подготовили памятки по самым задаваемым вопросам!<br />Скачайте и
        ознакомьтесь с нашими инстукциями.
      </p>
      <div class="questions__buttons">
        <a
          href="./docs/Перечень документов.pdf"
          target="_blank"
          class="questions__button array-docs"
          >Перечень документов</a
        >
        <a
          href="./docs/Компенсация.pdf"
          target="_blank"
          class="questions__button get-compensation"
          >Получить компенсацию</a
        >
      </div>
      <div class="questions__buttons">
        <a
          href="./docs/Медицинская справка.pdf"
          target="_blank"
          class="questions__button medical-doc"
          >Медицинская справка</a
        >
        <a
          href="./docs/Шпаргалка.pdf"
          target="_blank"
          class="questions__button cheat-sheet"
          id="cheat-sheet"
          >Что взять с собой</a
        >
      </div>
      <div class="questions__wrapper">
        <div class="questions__list" id="questions-list">
          <ul class="questions__items">
            <% faq.forEach(function(item){ %>
            <li class="questions__item">
              <h3 class="questions__question"><%= item.title %></h3>
              <p class="questions__answer">
                <%= item.description %>
              </p>
            </li>
            <% }) %>
          </ul>
        </div>
        <form id="questions__form" action="/questions" method="POST">
          <div class="questions__form">
            <div class="questions__inner">
              <h3 class="questions__form-header">Не нашли ответа?</h3>
              <p class="questions__form-description">
                Задайте свой вопрос и наши администраторы свяжутся с Вами в
                любое удобное время!
              </p>
              <div class="questions__form-wrapper">
                <input
                  class="questions__form-input"
                  type="text"
                  name="name"
                  id="name"
                  placeholder="Имя"
                  required
                />
                <input
                  class="questions__form-input"
                  type="tel"
                  name="phoneNumber"
                  id="phoneNumber"
                  placeholder="+7(___)___-__-__"
                  required
                />
                <textarea
                  class="questions__form-input"
                  name="personQuestion"
                  id="personQuestion"
                  placeholder="Вопрос"
                  rows="6"
                  required
                ></textarea>
                <div
                  class="g-recaptcha"
                  data-sitekey="6LevpWwqAAAAAM4vmyWWcCldU3cPiCmtaRRx4rAW"
                  data-action="LOGIN"
                  ></div>
                  <button type="submit" class="questions__form-button">
                  Отправить
                </button>
              </div>
            </div>
            <div class="questions__checkbox">
              <input
                class="questions__checkbox-check"
                name="checkbox"
                type="checkbox"
                id="checkbox"
                required
              />
              <label class="questions__checkbox-label" for="checkbox"
                >Я согласен с условиями политики конфинденциальности.
                <a href="#">Подробнее</a></label
              >
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="wrapper">
    <div class="news" id="news">
      <div class="news__header">
        <h2 class="news__title">Делимся последними новостями</h2>
        <div class="news__slider-controls">
          <div class="news__controls">
            <div class="news__back">
              <img src="./img/arrow.svg" alt="arrow-back" />
            </div>
            <div class="news__dot">
              <img src="./img/dot.svg" alt="dot" />
            </div>
            <div class="news__next">
              <img src="./img/arrow.svg" alt="arrow-next" />
            </div>
          </div>
        </div>
      </div>
      <p class="news__description">
        Будьте в курсе наших событий! Быть может тут есть Ваш малыш.
      </p>
      <div class="news__slider">
        <div class="news__swiper swiper">
          <!-- Additional required wrapper -->
          <div class="swiper-wrapper">
            <!-- Slides -->
            <% news.forEach(function(news){ %>
            <div class="swiper-slide">
              <div class="news__card">
                <div class="news__card-img">
                  <img
                    src="./uploads/news/<%= news.imageUrl %>"
                    alt="<%= news.imageUrl %>"
                  />
                </div>
                <div class="news__card-info">
                  <h3 class="news__card-title"><%= news.title %></h3>
                  <p class="news__card-text"><%= news.description%></p>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="wrapper">
    <div class="reviews">
      <h2 class="reviews__title" id="reviews">Отзывы</h2>
      <div class="reviews__cards">
        <div class="reviews__swiper swiper">
          <!-- Additional required wrapper -->
          <div class="swiper-wrapper">
            <!-- Slides -->
            <% reviews.forEach(function(review) { %>
              <div class="swiper-slide">
                <div class="reviews__card">
                  <a
                    data-fslightbox="gallery"
                    class="reviews__video glightbox3"
                    href="./uploads/reviews/<%= review.videoUrl %>"
                    data-alt="alt"
                    >
                    <!-- data-fancybox="gallery" -->
                    <!-- href="./uploads/reviews/<%= review.videoUrl %>" -->
                    <% if(review.videoUrl.split('.')[review.videoUrl.split('.').length - 1] === "mp4" || review.videoUrl.split('.')[review.videoUrl.split('.').length - 1] === "webm") {%>
                    <video
                      width="100%"
                      height="100%"
                      autoplay
                      muted
                      loop
                      class="reviews__videoplayer"
                      id="reviews__videoplayer<%= review.id %>"
                    >
                      <source src="./uploads/reviews/<%= review.videoUrl %>" type="video/mp4" />
                      <source src="./uploads/reviews/<%= review.videoUrl %>" type="video/webm" />
                      <p>К сожалению, ваш браузер не поддерживает видео</p>
                    </video>
                    <% } else {%>
                      <img src="./img/clickOnPhoto.svg" alt="">
                      <% } %>
                  </a>
                  <div class="reviews__content">
                    <h3 class="reviews__name"><%= review.name %></h3>
                    <p class="reviews__child"><%= review.parent %>, <%= review.childAge %></p>
                    <p class="reviews__text">
                      <%= review.review %>
                    </p>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      </div>
      <div class="reviews__controls">
        <div class="reviews__back">
          <img src="./img/arrow.svg" alt="arrow-back" />
        </div>
        <div class="reviews__dot">
          <img src="./img/dot.svg" alt="dot" />
        </div>
        <div class="reviews__next">
          <img src="./img/arrow.svg" alt="arrow-next" />
        </div>
      </div>
    </div>
  </div>
</section>

